---
import "@styles/tiny-wave.css";

import TinyWave from "@layouts/TinyWave.astro";
import Header from "@components/tiny-wave/Header.svelte";
import Footer from "@components/tiny-wave/Footer.svelte";
import ToggleMute from "@components/tiny-wave/ToggleMute.svelte";
---

<TinyWave title="TinyWave">
  <div class="flex min-h-screen items-center justify-center">
    <div class="flex flex-col items-center gap-6">
      <Header />
      <button type="button" class="btn text-primary px-4 py-3 text-xs font-bold">
        Start Recording
      </button>
      <ToggleMute client:load />
      <Footer />
    </div>
  </div>
</TinyWave>

<style>
  @reference "@styles/tiny-wave.css";
</style>
