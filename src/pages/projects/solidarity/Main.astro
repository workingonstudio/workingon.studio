---
import * as SDContent from "@docs/solidarity/homepage.md";
const { frontmatter, Content } = SDContent;
---

<section class="flex w-full flex-col gap-11 md:w-2xl">
  <!-- prettier-ignore -->
  <header class="flex flex-col gap-6">
    <h1>{ frontmatter.headerFirst }<span>{frontmatter.headerPunctuation}</span></h1>
    <div class="w-full md:w-lg">
      <p>{ frontmatter.subHeader }</p>
    </div>
  </header>
  <main class="flex w-full flex-col md:w-lg"><Content /></main>
  <footer>{frontmatter.footer}</footer>
</section>

<style>
  @reference "@styles/solidarity.css";
  header {
    p {
      @apply text-xl;
    }
  }
  h1,
  h2,
  h3 {
    @apply uppercase;
    span {
      @apply text-primary;
    }
  }
  main {
    @apply gap-6 text-base leading-relaxed;
    h2 {
      span {
        @apply text-primary;
      }
    }
  }
  footer {
    font-family: "Seaweed Script";
    @apply text-3xl;
  }
</style>
