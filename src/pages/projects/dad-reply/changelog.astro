---
import DadReply from "@layouts/DadReply.astro";
import * as SDContent from "@docs/dadreply/changelog.md";
const { Content } = SDContent;
---

<DadReply title="Dad Reply - One-click emoji replies for Gmail - Changelog">
  <div class="container mx-auto flex w-full flex-col">
    <Content />
  </div>
</DadReply>

<style>
  @reference "@styles/dad-reply.css";
  .container {
    @apply px-4 py-6 text-pretty md:w-3xl;
    h2 {
      @apply pb-8;
    }
    h3 {
      @apply mb-2 text-5xl;
    }
    h4 {
      @apply mb-2;
    }
    ul {
      @apply mb-6;
    }
    li {
      @apply list-outside list-disc gap-2 text-slate-500;
    }
  }
</style>
