---
import SketchToday from "@layouts/SketchToday.astro";
import ContentHeader from "@components/sketch-today/partials/ContentHeader.svelte";
import * as SDContent from "@docs/sketch-today/faq.md";
const { frontmatter, Content } = SDContent;

let subtitle: string = frontmatter.subtitle;
let title: string = frontmatter.title;
let icon: string = frontmatter.icon;
---

<SketchToday title="Sketch Today - FAQ">
  <div class="my-12 flex flex-col rounded-2xl border border-stone-200 bg-white p-6 lg:p-12">
    <div class="flex flex-col gap-8 lg:w-2xl">
      <ContentHeader {subtitle} header={title} {icon} />
      <div class="content">
        <Content />
      </div>
    </div>
  </div>
</SketchToday>

<style>
  @reference "@styles/sketch-today.css";
  .content {
    @apply flex flex-col gap-8 text-pretty;
  }
  .content :global(a) {
    @apply text-header underline;
  }

  .content :global(h3) {
    @apply text-header text-xl;
  }
</style>
