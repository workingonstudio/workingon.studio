---
import "../styles/is-figma-down.css";

import Analytics from "./partials/Analytics.astro";
import { AstroSeo } from "@astrolib/seo";
import { ClientRouter } from "astro:transitions";

export interface Props {
  title: string;
}

const { title } = Astro.props;
const longTitle = title + " - workingon.studio";
const currentURL = new URL(Astro.url.pathname, Astro.site).href;
const publishDate = new Date().toISOString();
---

<html lang="en" class="scroll-smooth bg-[#1E1E1E]">
  <head>
    <AstroSeo
      title={longTitle}
      description="The unofficial status of a well know SaaS product."
      canonical={currentURL}
      ,
      openGraph={{
        url: currentURL,
        title: title,
        description: "The unofficial status of a well know SaaS product.",
        images: [
          {
            url: Astro.site + "",
            height: 600,
            width: 1200,
          },
          {
            url: Astro.site + "",
            height: 1080,
            width: 1080,
          },
        ],
        site_name: "workingon.studio",
        article: {
          publishedTime: publishDate,
          modifiedTime: publishDate,
          authors: ["Paul Mackenzie"],
        },
      }}
    />
    <meta charset="UTF-8" />
    <meta name="theme-color" content="#020618" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/is-figma-down/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded"
      rel="stylesheet"
    />
    <script
      is:inline
      type="module"
      src="https://code.iconify.design/iconify-icon/2.1.0/iconify-icon.min.js"
    >
    </script>
    <script is:inline src="https://kit.fontawesome.com/180e1f6a33.js" crossorigin="anonymous"
    ></script>
    <meta name="generator" content={Astro.generator} />
    <Analytics productName="Figma Down" />
    <ClientRouter />
  </head>
  <body>
    <slot />
  </body>
</html>
