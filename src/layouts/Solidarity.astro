---
import "../styles/solidarity.css";

import Analytics from "./partials/Analytics.astro";

export interface Props {
  title: string;
}

const brockmannFontUrl = import.meta.env.BROCKMANN_FONT_CSS_URL;

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="A creative studio producing cultural mirror products" />
    <meta name="theme-color" content="#030712" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400..700;1,400..700&family=Mulish:ital,wght@0,200..1000;1,200..1000&family=Seaweed+Script&display=swap"
      rel="stylesheet"
    />

    <script
      is:inline
      type="module"
      src="https://code.iconify.design/iconify-icon/2.1.0/iconify-icon.min.js"
    >
    </script>

    <!-- CDN Font Stylesheets -->
    {brockmannFontUrl && <link rel="stylesheet" href={brockmannFontUrl} />}

    <meta name="generator" content={Astro.generator} />
    <Analytics productName="Solidarity" />
    <title>{title}</title>
  </head>
  <body id="top">
    <slot />
  </body>
</html>
