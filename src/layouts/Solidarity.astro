---
import "../styles/solidarity.css";

import { AstroSeo } from "@astrolib/seo";

import Analytics from "./partials/Analytics.astro";
import { ClientRouter } from "astro:transitions";
import { Font } from "astro:assets";

export interface Props {
  title: string;
}

const brockmannFontUrl = import.meta.env.BROCKMANN_FONT_CSS_URL;

const { title } = Astro.props;
const longTitle = title + " - workingon.studio";
const currentURL = new URL(Astro.url.pathname, Astro.site).href;
const publishDate = new Date().toISOString();
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <AstroSeo
      title={longTitle}
      description="A Chrome Extension that makes you feel less s**t about looking for work."
      canonical={currentURL}
      openGraph={{
        url: currentURL,
        title: title,
        description: "A Chrome Extension that makes you feel less s**t about looking for work.",
        images: [
          {
            url: Astro.site + "solidarity/opengraph/site-default.png",
            height: 600,
            width: 1200,
          },
          {
            url: Astro.site + "solidarity/opengraph/site-square.png",
            height: 1080,
            width: 1080,
          },
        ],
        site_name: "workingon.studio",
        type: "site",
      }}
    />
    <meta charset="UTF-8" />
    <meta name="theme-color" content="#FAFAF9" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/solidarity/favicon.svg" />
    <Font cssVariable="--font-lora" preload />
    <Font cssVariable="--font-mulish" preload />

    <script
      is:inline
      type="module"
      src="https://code.iconify.design/iconify-icon/2.1.0/iconify-icon.min.js"
    ></script>

    <!-- CDN Font Stylesheets -->
    {brockmannFontUrl && <link rel="stylesheet" href={brockmannFontUrl} />}

    <meta name="generator" content={Astro.generator} />
    <Analytics productName="Solidarity" />
    <ClientRouter />
    <title>{title}</title>
  </head>
  <body id="top">
    <slot />
  </body>
</html>
