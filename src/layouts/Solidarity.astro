---
import "../styles/solidarity.css";

import { AstroSeo } from "@astrolib/seo";

import Analytics from "./partials/Analytics.astro";
import { ClientRouter } from "astro:transitions";

export interface Props {
  title: string;
}

const brockmannFontUrl = import.meta.env.BROCKMANN_FONT_CSS_URL;

const { title } = Astro.props;
const currentURL = new URL(Astro.url.pathname, Astro.site).href;
const publishDate = new Date().toISOString();
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <AstroSeo
      {title}
      description="A Chrome Extension that makes you feel less s**t about looking for work."
      canonical={currentURL}
      ,
      openGraph={{
        url: currentURL,
        title: title,
        description: "A Chrome Extension that makes you feel less s**t about looking for work.",
        images: [
          {
            url: Astro.site + "solidarity/solidarity-default-opengraph.png",
            height: 600,
            width: 1200,
          },
          {
            url: Astro.site + "solidarity/solidarity-square-opengraph.png",
            height: 1080,
            width: 1080,
          },
        ],
        site_name: "workingon.studio",
        article: {
          publishedTime: publishDate,
          modifiedTime: publishDate,
          authors: ["Paul Mackenzie"],
        },
      }}
    />
    <meta charset="UTF-8" />
    <meta name="theme-color" content="#FAFAF9" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/solidarity/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400..700;1,400..700&family=Mulish:ital,wght@0,200..1000;1,200..1000&family=Seaweed+Script&display=swap"
      rel="stylesheet"
    />

    <script
      is:inline
      type="module"
      src="https://code.iconify.design/iconify-icon/2.1.0/iconify-icon.min.js"
    ></script>

    <!-- CDN Font Stylesheets -->
    {brockmannFontUrl && <link rel="stylesheet" href={brockmannFontUrl} />}

    <meta name="generator" content={Astro.generator} />
    <Analytics productName="Solidarity" />
    <ClientRouter />
    <title>{title}</title>
  </head>
  <body id="top">
    <slot />
  </body>
</html>
