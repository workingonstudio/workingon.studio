---
import "../styles/base.css";
import "../styles/main.css";

import { Font } from "astro:assets";

import Analytics from "./partials/Analytics.astro";
import StructuredData from "./partials/StructuredData.astro";
import { AstroSeo } from "@astrolib/seo";

import Header from "@components/partials/Header.svelte";
import Footer from "@components/partials/Footer.svelte";

export interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
const defaultDescription =
  "I build tools that work and make you question why you needed them. Cultural mirror products for the modern internet.";
const currentURL = new URL(Astro.url.pathname, Astro.site).href;
const currentPath = Astro.url.pathname;

// Get font URLs from environment variables
const nudicaFontUrl = import.meta.env.NUDICA_FONT_CSS_URL;
---

<!doctype html>
<html lang="en" class="dark" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <Font cssVariable="--font-inter" preload />
    <Font cssVariable="--font-satoshi" preload />
    <AstroSeo
      {title}
      description={description || defaultDescription}
      canonical={currentURL}
      openGraph={{
        url: currentURL,
        title: title,
        description: description || defaultDescription,
        images: [
          {
            url: Astro.site + "site-default.webp",
            height: 630,
            width: 1200,
            alt: "workingon.studio - digital tools that work. And make a point.",
          },
          {
            url: Astro.site + "site-square.webp",
            height: 1200,
            width: 1200,
            alt: "workingon.studio - digital tools that work. And make a point.",
          },
          {
            url: Astro.site + "site-minimum.webp",
            height: 315,
            width: 600,
            alt: "workingon.studio - digital tools that work. And make a point.",
          },
        ],
        site_name: "workingon.studio",
        type: "website",
      }}
      twitter={{
        cardType: "summary_large_image",
        handle: "@prmack",
      }}
      ,
      additionalMetaTags={[
        {
          name: "twitter:image",
          content: Astro.site + "site-default.webp",
        },
      ]}
    />

    <meta name="theme-color" content="#030712" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="image/png" href="/favicon.png" />
    <script
      is:inline
      type="module"
      src="https://code.iconify.design/iconify-icon/2.1.0/iconify-icon.min.js"
    >
    </script>

    <meta name="generator" content={Astro.generator} />

    <Analytics />
    <StructuredData />

    <!-- CDN Font Stylesheets -->
    {nudicaFontUrl && <link rel="stylesheet" href={nudicaFontUrl} />}

    <title>{title}</title>
  </head>
  <body>
    <div class="sticky top-0 z-50 mb-12">
      <div class="mx-[5%] flex flex-col">
        <Header client:idle {currentPath} />
      </div>
    </div>
    <main class="mx-[5%] flex min-h-screen flex-1 flex-col">
      <div class="flex flex-1 flex-col justify-between gap-24">
        <div class="flex grow-1 flex-col justify-start gap-24 2xl:flex-row">
          <slot />
        </div>
        <Footer client:visible />
      </div>
    </main>
  </body>
</html>
