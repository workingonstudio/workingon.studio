---
import "../styles/global.css";

import Analytics from "./partials/Analytics.astro";
import { ClientRouter } from "astro:transitions";
import { AstroSeo } from "@astrolib/seo";

import Header from "@components/partials/Header.svelte";
import Footer from "@components/partials/Footer.svelte";

export interface Props {
  title: string;
}

const { title } = Astro.props;
const currentURL = new URL(Astro.url.pathname, Astro.site).href;
const publishDate = new Date().toISOString();
const currentPath = Astro.url.pathname;

// Get font URLs from environment variables
const nudicaFontUrl = import.meta.env.NUDICA_FONT_CSS_URL;
const nudicaMonoFontUrl = import.meta.env.NUDICA_MONO_FONT_CSS_URL;
---

<!doctype html>
<html lang="en" class="dark" class="scroll-smooth">
  <head>
    <AstroSeo
      {title}
      description="I'm tired of designing for metrics…tired of designing to make numbers go up…tired of playing to the wrong audience. Aren't you?"
      canonical={currentURL}
      ,
      openGraph={{
        url: currentURL,
        title: title,
        description:
          "I'm tired of designing for metrics…tired of designing to make numbers go up…tired of playing to the wrong audience. Aren't you?",
        images: [
          {
            url: Astro.site + "site-default-opengraph.png",
            height: 600,
            width: 1200,
          },
          {
            url: Astro.site + "site-square-opengraph.png",
            height: 1080,
            width: 1080,
          },
        ],
        site_name: "workingon.studio",
        article: {
          publishedTime: publishDate,
          modifiedTime: publishDate,
          authors: ["Paul Mackenzie"],
        },
      }}
    />
    <meta charset="UTF-8" />
    <meta name="theme-color" content="#030712" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Azeret+Mono:ital,wght@0,500;1,500&family=Space+Grotesk:wght@500&display=swap"
      rel="stylesheet"
    />
    <script
      is:inline
      type="module"
      src="https://code.iconify.design/iconify-icon/2.1.0/iconify-icon.min.js"
    >
    </script>

    <meta name="generator" content={Astro.generator} />

    <Analytics />
    <ClientRouter />

    <!-- CDN Font Stylesheets -->
    {nudicaFontUrl && <link rel="stylesheet" href={nudicaFontUrl} />}
    {nudicaMonoFontUrl && <link rel="stylesheet" href={nudicaMonoFontUrl} />}

    <title>{title}</title>
  </head>
  <body>
    <div class="sticky top-0 mb-12 shadow-2xl shadow-gray-950">
      <div class="mx-[5%] flex flex-col md:mx-[10%]">
        <Header client:load {currentPath} />
      </div>
    </div>
    <main class="mx-[5%] flex min-h-screen flex-1 flex-col md:mx-[10%]">
      <div class="flex flex-1 flex-col justify-between gap-24">
        <div class="flex grow-1 flex-col justify-start gap-24 2xl:flex-row">
          <slot />
        </div>
        <Footer client:load />
      </div>
    </main>
  </body>
</html>
