---
import "../styles/global.css";

const isDev = import.meta.env.DEV;
const umamiScriptURL = import.meta.env.UMAMI_SCRIPT_URL;
const umamiWebsiteID = isDev ? import.meta.env.UMAMI_ID_DEV : import.meta.env.UMAMI_ID_PROD;

console.log("Final values:", { isDev, umamiScriptURL, umamiWebsiteID });

export interface Props {
  title: string;
}

const { title } = Astro.props;

// Get font URLs from environment variables
const nudicaFontUrl = import.meta.env.NUDICA_FONT_CSS_URL;
const nudicaMonoFontUrl = import.meta.env.NUDICA_MONO_FONT_CSS_URL;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="A creative studio producing cultural mirror products" />
    <meta name="theme-color" content="#030712" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Azeret+Mono:ital,wght@0,500;1,500&family=Space+Grotesk:wght@500&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />

    <script is:inline defer data-website-id={umamiWebsiteID} src={umamiScriptURL}></script>

    <!-- CDN Font Stylesheets -->
    {nudicaFontUrl && <link rel="stylesheet" href={nudicaFontUrl} />}
    {nudicaMonoFontUrl && <link rel="stylesheet" href={nudicaMonoFontUrl} />}

    <title>{title}</title>
  </head>
  <body>
    <main class="mx-[5%] flex min-h-screen flex-1 md:mx-[10%]">
      <slot />
    </main>
  </body>
</html>
